{
  "name": "@sibyllinesoft/hydra",
  "version": "1.0.0",
  "description": "Professional installer for Hydra Claude Code Studio with modern web and terminal interface",
  "main": "installer/install.js",
  "type": "module",
  "bin": {
    "hydra-installer": "./bin/hydra-installer.mjs",
    "hydra": "./bin/hydra.mjs"
  },
  "scripts": {
    "start": "node installer/install.js",
    "enhanced": "node installer/install-enhanced.js",
    "test-enhanced": "node test-enhanced-installer.js",
    "validate": "node validate-installer.js",
    "demo": "node installer/hydra-demo.js",
    "demo-features": "node installer/demo-enhanced-features.js",
    "server": "node installer-server.js",
    "web": "node installer-server.js",
    "preview": "node installer/hydra-preview.js",
    "preview-enhanced": "node installer/hydra-preview-enhanced.js",
    "test": "cd tests/installer && npm test",
    "test:installer": "cd tests/installer && npm run test:installer",
    "test:all": "cd tests/installer && npm run test:verbose"
  },
  "keywords": [
    "claude",
    "hydra",
    "installer",
    "terminal",
    "ui",
    "mcp",
    "web",
    "animated",
    "ascii-art",
    "cyberpunk",
    "blessed",
    "tui"
  ],
  "author": "Hydra Claude Code Studio",
  "license": "MIT",
  "dependencies": {
    "blessed": "^0.1.81",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "semver": "^7.5.4",
    "socket.io": "^4.7.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
