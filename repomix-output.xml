# Check for uncommitted changes
if [[ $(git status --porcelain) ]]; then
  echo "‚ö†Ô∏è Uncommitted changes in worktree:"
  git status --short
  echo "Commit or stash changes before merging"
  exit 1
fi

# Check branch status
git fetch origin
git status -sb
