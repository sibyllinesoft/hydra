      INSERT INTO users (name, email, created_at, updated_at)
      VALUES ($1, $2, NOW(), NOW())
      RETURNING id, name, email, created_at, updated_at
    `;
    const result = await this.db.query(query, [userData.name, userData.email]);
    return result.rows[0];
