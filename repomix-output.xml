  <phase name="Detection">
    <tool method="iSMELL" f1_score="75.17%">AI-enhanced code smell detection.</tool>
    <metric>Maintainability Index (MI)</metric>
    <metric>Cyclomatic Complexity</metric>
    <metric>Technical Debt Ratio</metric>
