{
  "name": "hydra-test-scripts",
  "version": "1.0.0", 
  "description": "NPM scripts for Hydra CLI comprehensive testing pipeline",
  "scripts": {
    "test": "tests/ci/test-runner.sh",
    "test:unit": "tests/ci/test-runner.sh --type unit",
    "test:integration": "tests/ci/test-runner.sh --type integration", 
    "test:e2e": "tests/ci/test-runner.sh --type e2e",
    "test:security": "tests/ci/test-runner.sh --type security",
    "test:stress": "tests/ci/test-runner.sh --type stress",
    "test:all": "tests/ci/test-runner.sh --type unit,integration,e2e,security",
    "test:ci": "tests/ci/test-runner.sh --type unit,integration,e2e,security --no-report",
    "test:watch": "jest --watch --config=tests/setup/jest.config.js",
    "test:coverage": "npm run test:all -- --coverage 95",
    "test:verbose": "npm run test:all -- --verbose",
    "test:debug": "node --inspect-brk=0.0.0.0:9229 node_modules/.bin/jest --runInBand --config=tests/setup/jest.config.js",
    "coverage:report": "jest --config=tests/coverage/jest.coverage.config.js --coverage --coverageReporters=text-summary",
    "coverage:html": "jest --config=tests/coverage/jest.coverage.config.js --coverage --coverageReporters=html",
    "coverage:lcov": "jest --config=tests/coverage/jest.coverage.config.js --coverage --coverageReporters=lcov",
    "coverage:merge": "nyc merge tests/coverage/reports tests/coverage/reports/merged/coverage-final.json",
    "coverage:check": "nyc check-coverage --lines 95 --functions 95 --branches 90 --statements 95",
    "quality:gates": "tests/ci/test-runner.sh --type all && npm run coverage:check",
    "quality:report": "node tests/coverage/results-processor.js",
    "lint:tests": "eslint tests/**/*.js --fix",
    "lint:tests:check": "eslint tests/**/*.js",
    "format:tests": "prettier --write \"tests/**/*.{js,json}\"",
    "format:tests:check": "prettier --check \"tests/**/*.{js,json}\"",
    "validate:package": "npm ls --depth=0 && npm audit --audit-level moderate",
    "validate:tests": "npm run lint:tests:check && npm run format:tests:check",
    "validate:all": "npm run validate:package && npm run validate:tests && npm run test:all",
    "ci:setup": "npm ci --prefer-offline --no-audit && npm run validate:package",
    "ci:test": "npm run validate:tests && npm run test:ci",
    "ci:coverage": "npm run test:all -- --coverage 95 && npm run coverage:check",
    "ci:quality-gates": "npm run ci:coverage && npm run quality:gates",
    "dev:test": "npm run test:unit -- --watch",
    "dev:coverage": "npm run test:unit -- --coverage --watch",
    "dev:debug": "npm run test:debug",
    "perf:benchmark": "node tests/performance/benchmark.js",
    "perf:profile": "node --prof tests/performance/profile.js && node --prof-process isolate-*.log",
    "clean:coverage": "rm -rf tests/coverage/reports/*",
    "clean:artifacts": "rm -rf tests/artifacts/*",
    "clean:temp": "rm -rf tests/temp/*",
    "clean:all": "npm run clean:coverage && npm run clean:artifacts && npm run clean:temp",
    "docs:coverage": "open tests/coverage/reports/merged/lcov-report/index.html",
    "docs:tests": "jsdoc tests/**/*.js -d docs/tests/",
    "security:audit": "npm audit --audit-level moderate",
    "security:snyk": "npx snyk test",
    "security:tests": "npm run test:security -- --verbose"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0", 
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "nyc": "^15.1.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "jsdoc": "^4.0.0",
    "snyk": "^1.1200.0"
  },
  "jest": {
    "projects": [
      "tests/setup/jest.config.js",
      "tests/coverage/jest.coverage.config.js"
    ]
  },
  "nyc": {
    "temp-dir": "tests/coverage/reports/.nyc_output",
    "report-dir": "tests/coverage/reports/merged",
    "reporter": ["text", "lcov", "html", "json-summary"],
    "include": [
      "bin/**/*.{js,mjs}",
      "lib/**/*.{js,mjs}",
      "src/**/*.{js,mjs}"
    ],
    "exclude": [
      "tests/**",
      "coverage/**",
      "**/*.test.{js,mjs}",
      "**/*.spec.{js,mjs}"
    ],
    "check-coverage": true,
    "lines": 95,
    "functions": 95,
    "branches": 90,
    "statements": 95
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "hydra",
    "cli",
    "testing", 
    "jest",
    "coverage",
    "quality-gates",
    "ci-cd",
    "automation"
  ],
  "author": "Hydra CLI Team",
  "license": "MIT"
}